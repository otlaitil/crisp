# If not running interactively, don't do anything.
[ -z "$PS1" ] && return

PS1="\[\e[37m\][\[\e[m\]\[\e[32m\]dev\[\e[m\]\[\e[37m\]]\[\e[m\] \W \\$ "

motd() {
	cat <<- HEREDOC

	Welcome to Crisp!

	These are common commands used during development:

	interactive console
	   iex -S mix

	testing
	   mix test
	   mix test --cover
	   mix test test/some/particular/dir
	   mix test test/some/particular/file_test.exs
	   mix test test/some/particular/file_test.exs:12

	maintaining code hygiene
	   mix format
	   mix lint
	   mix lint explain Credo.Check.Refactor.Nesting

	install and delete dependencies
	   mix do deps.get, deps.compile   # To install new dependencies
	   mix deps.unlock --unused        # To remove dependencies

	other
	   mix docs       # Generate documentation
	   mix security   # Security-focused static analysis
	   mix tc         # Type check with dialyzer

	HEREDOC
}

motd
